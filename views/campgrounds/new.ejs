<% include ../partials/header %>

<div class="row">
    <div class="container">
        <h1 style="text-align: center">Create a new campground</h1>
        <div style="max-width: 30%; margin:25px auto;">
            <form action="/campgrounds" method="post">
                  <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="name">
                  </div>
                  <div class="form-group">
                    <label for="image">Campground Image URL</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="image">
                  </div>
                  <div class="form-group">
                    <label for="description">Campground Description</label>
                    <textarea rows="5" class="form-control" name="description" id="description" placeholder="description"></textarea>
                  </div>
                  <button class="btn btn-primary btn-block">Save</button>
                  
                  <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
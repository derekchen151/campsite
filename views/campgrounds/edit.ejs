<% include ../partials/header %>

<div class="row">
    <div class="container">
        <h1 style="text-align: center">Edit <%= campground.name%></h1>
        <div style="max-width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name%>">
                  </div>
                  <div class="form-group">
                    <label for="image">Campground Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image%>">
                  </div>
                  <div class="form-group">
                    <label for="image">Campground Price</label>
                    <input class="form-control" type="number" name="campground[price]" id="price" min="0.01" step="0.01" value="<%= campgrond.price%>">
                  </div>
                  <div class="form-group">
                    <label for="description">Campground Description</label>
                    <textarea rows="5" class="form-control" name="campgrond[description]" id="description"><%= campground.description%></textarea>
                  </div>
                  <button class="btn btn-primary btn-block">Update</button>
                  
                  <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
<% include ../partials/header %>

<div class="row">
    <div class="container">
        <h1 style="text-align: center">Edit comment for <%=campground.name%></h1>
        <div style="max-width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>/?_method=PUT" method="POST">
                  <div class="form-group">
                    <label for="description">Your Comment</label>
                    <textarea rows="5" class="form-control" name="text" id="description" placeholder="comment"><%= comment.text%></textarea>
                  </div>
                  <button class="btn btn-primary btn-block">Save</button>
                  
                  <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>